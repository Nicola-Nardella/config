// Place your settings in this file to overwrite the default settings
{
  // ###### EDITOR ######
  "editor.tabSize": 2,
  "editor.detectIndentation": false,
  "editor.scrollBeyondLastLine": false,
  "editor.rulers": [100],
  "editor.renderWhitespace": "all",

  // ###### FILES ######
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.autoSave": "onWindowChange",

	"eslint.autoFixOnSave": false,

  "search.exclude": {
    "**/node_modules": true,
    "**/build": true,
    "**/bower_components": true,
    "webpack*": true,
    "**/test": false
  },

  "stylelint.enable": true,
  "css.validate": false,

  "extensions.autoUpdate": false,

  "javascript.validate.enable": false,
  "window.zoomLevel": 0,

  "files.exclude": {
    "node_modules/": true,
    ".DS_Store": true,
    ".sass-cache": true,
    ".publish": true,

    ".idea/": true,

    "public": false,
    "Desktop.ini": true,
    "node_modules": true,
    "**/generated/_icons.sass": true,
    "npm-debug.log": true,
    ".awspublish*": true,
    "build": true,

    // VS Code
    "typings*": true,
    "jsconfig.json": true,
    ".vscode": true,
    ".tern-project": true,

    "credentials": true,
    "Dockerfile": true
  },

  "editor.snippetSuggestions": "top",

  "path-intellisense.mappings": {
    "/": "${workspaceRoot}",
    "src": "${workspaceRoot}/app/scripts/",
    "images": "${workspaceRoot}/app/images/",
    "fixtures": "${workspaceRoot}/test/test-fixtures/",
    "test-helpers": "${workspaceRoot}/test/test-helpers/",
    "common": "${workspaceRoot}/node_modules/plentific-common/plentific_common/templates/common/",
    "plentific": "${workspaceRoot}/node_modules/plentific-js-common/",
    "shared": "${workspaceRoot}/app/shared/scripts/"
  }
,
"vsicons.projectDetection.autoReload": true,
"workbench.editor.enablePreview": true,
"editor.wordWrap": "on",
"[javascript]": {

  },
  "workbench.colorTheme": "Monokai",
  "workbench.iconTheme": "vscode-icons",
  "files.associations": {
    "*.js": "javascriptreact, html"
  },
  "editor.minimap.enabled": false,
  "vsicons.dontShowNewVersionMessage": true,
  "guides.enabled": false,
  "sync.gist": "4cb7d6116b39a73d68ff504ddba594eb",
  "sync.autoDownload": false,
  "sync.autoUpload": false,
  "sync.forceDownload": false,
  "sync.quietSync": false,
  "sync.askGistName": false,

  "latex-workshop.chktex.enabled": false,
  "python.pythonPath": "${VIRTUAL_ENV}/bin/python",
  "javascript.updateImportsOnFileMove.enabled": "never",
  "breadcrumbs.enabled": true,
  "editor.fontSize": 11,
  "editor.fontWeight": "600",
  "explorer.autoReveal": true,
  "diffEditor.renderSideBySide": false,
  "editor.minimap.maxColumn": 100,
  "files.defaultLanguage": "javascript",
  "javascript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBrackets": true,
  "javascript.format.insertSpaceAfterOpeningAndBeforeClosingJsxExpressionBraces": true,
  "editor.tabCompletion": "on",
  "editor.suggestSelection": "recentlyUsedByPrefix",
  "python.venvPath": "~/.virtualenvs",
  "editor.accessibilitySupport": "off",
}
